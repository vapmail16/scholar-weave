{
  "name": "scholar-weave-backend",
  "version": "1.0.0",
  "description": "Backend service for ScholarWeave with PostgreSQL and MongoDB support",
  "main": "dist/api/index.js",
  "scripts": {
    "dev": "tsx watch src/api/index.ts",
    "build": "tsc",
    "start": "node dist/api/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "migrate:to-mongodb": "tsx scripts/migrate-to-mongodb.ts",
    "db:seed": "tsx src/database/seed.ts",
    "db:reset": "prisma migrate reset",
    "lint": "eslint src",
    "lint:fix": "eslint src --ext .ts --fix",
    "migrate:to-postgres": "tsx scripts/migrate-to-postgres.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "prisma": "^5.10.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
